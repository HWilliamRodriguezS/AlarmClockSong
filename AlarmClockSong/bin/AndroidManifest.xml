<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bootbraing.alarmclocksong"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/acs_ic_default"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@style/AppThemeBlack">
        <activity
            android:name="com.bootbraing.alarmclocksong.controllers.MainAlarmActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bootbraing.alarmclocksong.controllers.SetAlarmActivity"
            android:label="@string/set_alarm"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.SET_ALARM" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bootbraing.alarmclocksong.controllers.AlarmReceiverActivity"
            android:label="@string/set_alarm"
            android:configChanges="orientation|keyboardHidden|screenSize" >

            <!-- android:theme="@android:style/Theme.Dialog" -->
            <intent-filter>
                <action android:name="android.intent.action.RECEIVER_ALARM" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bootbraing.alarmclocksong.controllers.AlarmPreferences"
            android:label="@string/preferences" >
            <intent-filter>
                <action android:name="android.intent.action.ALARM_PREFERENCES" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bootbraing.alarmclocksong.controllers.AlarmNotificationBar"
            android:label="Notification"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.ALARM_NOTIFICATION" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.bootbraing.alarmclocksong.controllers.BootReciever" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>